<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200pt"
    android:orientation="horizontal">
    <!--姓名，描述，评分-->
    <LinearLayout
        android:layout_width="0pt"
        android:layout_height="match_parent"
        android:layout_marginStart="57pt"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="30pt"
        android:paddingTop="30pt">
        <!--标题-->
        <TextView
            android:id="@+id/tv_inflatelsvitem_msxx_title"
            android:layout_width="match_parent"
            android:layout_height="0pt"
            android:maxLines="1"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/color_323232"
            android:textSize="30pt" />
        <!--评分-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0pt"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.example.administrator.aitang.views.MyRatingBar
                android:id="@+id/tv_inflatelsvitem_msxx_xingji"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:numStars="2"
                app:clickable="false"
                app:starCount="5"
                app:starEmpty="@drawable/linestar_icon_pinglun"
                app:starFill="@drawable/staryellow_icon_pinglun"
                app:starHalf="@drawable/halfstar_icon_pinglun"
                app:starImageSize="20pt"
                app:starStep="1"
                app:stepSize="Half" />
            <!--分数-->
            <TextView
                android:id="@+id/tv_inflatelsvitem_msxx_fs"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/color_FF9B19"
                android:textSize="24pt" />

            <!--分文字-->
            <TextView
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="分"
                android:textColor="@color/color_909090"
                android:textSize="24pt" />
        </LinearLayout>
        <!--时间-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0pt"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/textView5"
                android:layout_width="24pt"
                android:layout_height="24pt"
                android:src="@drawable/timeyellow_icon_disable" />

            <TextView
                android:id="@+id/tv_inflate_lsvitem_time"
                android:layout_width="0pt"
                android:layout_height="wrap_content"
                android:layout_marginStart="20pt"
                android:layout_weight="1"
                android:textColor="@color/color_909090"
                android:textSize="24pt" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="88pt"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_inflatelsvitem_msxx_ckpf"
            android:layout_width="120pt"
            android:layout_height="40pt"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="查看评论"
            android:textColor="@color/color_FF9B19"
            android:textSize="30pt" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10pt"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_inflatelsvitem_msxx_pn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="83293"
                android:textColor="@color/color_08D2B2"
                android:textSize="24pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人报名"
                android:textColor="@color/color_646464"
                android:textSize="24pt" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>


