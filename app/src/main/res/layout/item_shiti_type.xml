<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50pt"
        android:layout_marginTop="50pt"
        android:drawablePadding="10pt"
        android:gravity="left"
        android:paddingLeft="26pt"
        android:textColor="@color/color_323232"
        android:textSize="34pt" />

    <com.example.administrator.aitang.views.MyGridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:horizontalSpacing="3pt"
        android:numColumns="2"
        android:paddingBottom="50pt"
        android:scrollbars="none"
        android:verticalSpacing="20pt" />
</LinearLayout>