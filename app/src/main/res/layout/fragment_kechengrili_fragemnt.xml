<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_nowTime"
        android:layout_width="match_parent"
        android:layout_height="50pt"
        android:paddingStart="24pt"
        android:background="@color/color_08D2B2"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="#ffffff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58pt"
        android:background="@color/color_08D2B2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="日"
            android:textColor="#ffffff"
            android:textSize="36pt" />

        <TextView
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="一"
            android:textColor="#ffffff"
            android:textSize="36pt" />

        <TextView
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="二"
            android:textColor="#ffffff"
            android:textSize="36pt" />

        <TextView
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="三"
            android:textColor="#ffffff"
            android:textSize="36pt" />

        <TextView
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="四"
            android:textColor="#ffffff"
            android:textSize="36pt" />

        <TextView
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="五"
            android:textColor="#ffffff"
            android:textSize="36pt" />

        <TextView
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="六"
            android:textColor="#ffffff"
            android:textSize="36pt" />
    </LinearLayout>


    <com.necer.ncalendar.calendar.NCalendar
        android:id="@+id/ncalendarrrr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:firstDayOfWeek="Sunday"
        app:hintColor="@color/color_E5E5E5"
        app:hollowCircleColor="@color/color_08D2B2"
        app:isShowHoliday="false"
        app:isShowLunar="true"
        app:pointColor="@color/color_08D2B2"
        app:selectCircleColor="@color/color_08D2B2"
        app:solarTextSize="36pt">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:visibility="visible" />

    </com.necer.ncalendar.calendar.NCalendar>

</LinearLayout>