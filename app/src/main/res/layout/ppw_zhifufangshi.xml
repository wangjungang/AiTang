<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600pt"
    android:layout_height="867pt"
    android:background="@color/touming"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="400pt"
        android:background="@color/color_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0pt"
            android:layout_weight="1"
            android:paddingEnd="100pt"
            android:paddingStart="100pt">

            <View
                android:layout_width="50pt"
                android:layout_height="1pt"
                android:layout_gravity="center_vertical"
                android:background="@color/color_BDBDBD" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="0pt"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="34pt"
                android:layout_weight="1"
                android:gravity="center"
                android:text="选择支付方式"
                android:textColor="@color/color_323232"
                android:textSize="36pt" />

            <View
                android:layout_width="50pt"
                android:layout_height="1pt"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="34pt"
                android:background="@color/color_BDBDBD" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0pt"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/img_ppw_zhifufangshi_weixi"
                android:layout_width="80pt"
                android:layout_height="80pt"
                android:layout_marginStart="113pt"
                android:src="@drawable/wechat_icon"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_ppw_zhifufangshi_weixi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_ppw_zhifufangshi_weixi"
                android:layout_marginStart="98pt"
                android:layout_marginTop="26dp"
                android:text="微信支付"
                android:textColor="@color/color_646464"
                android:textSize="28pt" />

            <ImageView
                android:id="@+id/img_ppw_zhifufangshi_zhifubao"
                android:layout_width="80pt"
                android:layout_height="80pt"
                android:layout_alignBottom="@+id/img_ppw_zhifufangshi_weixi"
                android:layout_alignTop="@+id/img_ppw_zhifufangshi_weixi"
                android:layout_marginStart="200pt"
                android:layout_toEndOf="@+id/img_ppw_zhifufangshi_weixi"
                android:src="@drawable/zhifubao_icon" />

            <TextView
                android:id="@+id/tv_ppw_zhifufangshi_zhifubao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_ppw_zhifufangshi_zhifubao"
                android:layout_marginEnd="98pt"
                android:layout_marginStart="150pt"
                android:layout_marginTop="26dp"
                android:layout_toEndOf="@+id/tv_ppw_zhifufangshi_weixi"
                android:text="支付宝支付"
                android:textColor="@color/color_646464"
                android:textSize="28pt" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_ppw_zhifufangshi_close"
        android:layout_width="80pt"
        android:layout_height="80pt"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="247pt"
        android:layout_marginTop="140pt"
        android:src="@drawable/close_icon" />
</LinearLayout>
