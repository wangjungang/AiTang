<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_tijiaodingdan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F6F6F6"
    android:orientation="vertical"
    tools:context="com.example.administrator.aitang.ui.zhibo.TijiaoDingdanActivity">

    <include
        android:id="@+id/headerview"
        layout="@layout/include_headerview" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_inflate_lsvitem_zhibofrg"
                android:layout_width="match_parent"
                android:layout_height="354pt"
                android:background="@color/color_08D2B2"
                android:paddingEnd="26pt"
                android:paddingStart="26pt">

                <TextView
                    android:id="@+id/tv_inflate_lsvitem_zhibofrg_banji"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="29pt"
                    android:text="TextView"
                    android:textColor="@color/color_white"
                    android:textSize="36pt" />

                <TextView
                    android:id="@+id/tv_inflate_lsvitem_zhibofrg_kechengzhaiyao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/tv_inflate_lsvitem_zhibofrg_banji"
                    android:layout_below="@+id/tv_inflate_lsvitem_zhibofrg_banji"
                    android:layout_marginTop="14pt"
                    android:text="TextView"
                    android:textColor="@color/color_white"
                    android:textSize="28pt" />

                <ImageView
                    android:id="@+id/textView7"
                    android:layout_width="24pt"
                    android:layout_height="24pt"
                    android:layout_alignStart="@+id/tv_inflate_lsvitem_zhibofrg_kechengzhaiyao"
                    android:layout_below="@+id/tv_inflate_lsvitem_zhibofrg_kechengzhaiyao"
                    android:layout_marginTop="25pt"
                    android:src="@drawable/clockwhite_icon_tijiaodingdan" />

                <TextView
                    android:id="@+id/tv_inflate_lsvitem_zhibofrg_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView7"
                    android:layout_alignBottom="@+id/textView7"
                    android:layout_marginStart="26pt"
                    android:layout_toEndOf="@+id/textView7"
                    android:gravity="bottom"
                    android:text="TextView"
                    android:textColor="@color/color_white"
                    android:textSize="24pt" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignStart="@+id/textView7"
                    android:layout_below="@+id/textView7"
                    android:layout_marginBottom="30pt"
                    android:layout_marginTop="38pt"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0pt"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_inflate_lsvitem_zhibofrg_pic1"
                                android:layout_width="70pt"
                                android:layout_height="70pt"
                                android:scaleType="fitXY"
                                android:src="@drawable/touxiang_image_zhiboshouye"
                                android:visibility="invisible" />

                            <TextView
                                android:id="@+id/tv_inflate_lsvitem_zhibofrg_name1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10pt"
                                android:textColor="@color/color_white"
                                android:textSize="24pt"
                                android:visibility="invisible" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="30pt"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_inflate_lsvitem_zhibofrg_pic2"
                                android:layout_width="70pt"
                                android:layout_height="70pt"
                                android:scaleType="fitXY"
                                android:src="@drawable/touxiang_image_zhiboshouye"
                                android:visibility="invisible" />

                            <TextView
                                android:id="@+id/tv_inflate_lsvitem_zhibofrg_name2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10pt"
                                android:textColor="@color/color_white"
                                android:textSize="24pt"
                                android:visibility="invisible" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="30pt"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_inflate_lsvitem_zhibofrg_pic3"
                                android:layout_width="70pt"
                                android:layout_height="70pt"
                                android:scaleType="fitXY"
                                android:src="@drawable/touxiang_image_zhiboshouye"
                                android:visibility="invisible" />

                            <TextView
                                android:id="@+id/tv_inflate_lsvitem_zhibofrg_name3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10pt"
                                android:textColor="@color/color_white"
                                android:textSize="24pt"
                                android:visibility="invisible" />
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥"
                            android:textColor="@color/color_08D2B2"
                            android:textSize="48pt" />

                        <TextView
                            android:id="@+id/tv_inflate_lsvitem_zhibofrg_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/tv"
                            android:text="356"
                            android:textColor="@color/color_white"
                            android:textSize="48pt" />

                        <TextView
                            android:id="@+id/tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv"
                            android:text="已有"
                            android:textColor="@color/color_white"
                            android:textSize="24pt" />

                        <TextView
                            android:id="@+id/tv_inflate_lsvitem_zhibofrg_pn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/tv2"
                            android:layout_toEndOf="@+id/tv2"
                            android:text="56"
                            android:textColor="@color/color_white"
                            android:textSize="30pt" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/tv2"
                            android:layout_toEndOf="@+id/tv_inflate_lsvitem_zhibofrg_pn"
                            android:text="人购买"
                            android:textColor="@color/color_white"
                            android:textSize="24pt" />

                    </RelativeLayout>
                </LinearLayout>


            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="152pt"
                android:paddingStart="26pt"
                android:paddingTop="76pt"
                android:text="选择代金券"
                android:textColor="@color/color_323232"
                android:textSize="34pt" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="530pt"
                android:orientation="vertical">
                <!--课程券-->
                <LinearLayout
                    android:id="@+id/ll_kechengquan_tijiaodingdanAct"
                    android:layout_width="match_parent"
                    android:layout_height="0pt"
                    android:layout_weight="1"
                    android:background="@color/color_white"
                    android:orientation="horizontal"
                    android:paddingEnd="26pt"
                    android:paddingStart="26pt">

                    <TextView
                        android:layout_width="0pt"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="课程券"
                        android:textColor="@color/color_323232"
                        android:textSize="34pt" />

                    <TextView
                        android:id="@+id/tv_tijiaodingdanAct_kechengquan"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4pt"
                        android:drawableEnd="@drawable/weizhankai_button_default"
                        android:drawablePadding="40pt"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/color_08D2B2"
                        android:textSize="48pt" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2pt"
                    android:background="@color/color_F6F6F6" />
                <!--现金抵用券-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0pt"
                    android:layout_weight="1"
                    android:background="@color/color_white"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingEnd="26pt"
                    android:paddingStart="26pt">

                    <TextView
                        android:layout_width="0pt"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="现金抵用券"
                        android:textColor="@color/color_323232"
                        android:textSize="34pt" />

                    <TextView
                        android:id="@+id/tv_tijiaodingdanAct_xianjindyq"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="￥"
                        android:textColor="@color/color_08D2B2"
                        android:textSize="48pt" />

                    <CheckBox
                        android:id="@+id/cb_tijiaodingdanAct_kechengquan"
                        android:layout_width="36pt"
                        android:layout_height="36pt"
                        android:layout_marginLeft="20pt"
                        android:background="@drawable/selector_diyongquan_cb_bg"
                        android:button="@null"
                        android:checked="false"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2pt"
                    android:background="@color/color_F6F6F6" />
                <!--需支付-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0pt"
                    android:layout_weight="1"
                    android:background="@color/color_white"
                    android:orientation="horizontal"
                    android:paddingEnd="26pt"
                    android:paddingStart="26pt">

                    <TextView
                        android:layout_width="0pt"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="需支付"
                        android:textColor="@color/color_323232"
                        android:textSize="34pt" />

                    <TextView
                        android:id="@+id/tv_tijiaodingdanAct_payMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="￥"
                        android:textColor="@color/color_FF9B19"
                        android:textSize="60pt" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8pt"
                    android:background="@color/color_F6F6F6" />
                <!--支付方式-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0pt"
                    android:layout_weight="1"
                    android:background="@color/color_white"
                    android:orientation="horizontal"
                    android:paddingEnd="26pt"
                    android:paddingStart="26pt">

                    <TextView
                        android:layout_width="0pt"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="支付方式"
                        android:textColor="@color/color_323232"
                        android:textSize="34pt" />

                    <TextView
                        android:id="@+id/tv_tijiaodingdanAct_zhifufangshi"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="在线支付"
                        android:textColor="@color/color_909090"
                        android:textSize="30pt" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_tijiaodingdanAct_tijiaodingdan"
                android:layout_width="450pt"
                android:layout_height="88pt"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="156pt"
                android:layout_marginTop="130pt"
                android:background="@color/color_08D2B2"
                android:text="提交订单"
                android:textColor="@color/color_white"
                android:textSize="36pt" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
