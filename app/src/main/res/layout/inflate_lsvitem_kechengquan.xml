<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200pt"
    android:background="@color/color_white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0pt"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="20pt">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0pt"
            android:layout_weight="1"
            android:gravity="center"
            android:text="￥100"
            android:textColor="@color/color_08D2B2"
            android:textSize="48pt" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0pt"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="课程券"
            android:textColor="@color/color_646464"
            android:textSize="24pt" />

    </LinearLayout>

    <com.fang.dashview.DashView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="40pt"
        android:layout_marginTop="40pt"
        app:dashOrientation="1"
        app:dashWidth="2pt"
        app:lineColor="@color/color_BDBDBD"
        app:lineHeight="1pt"
        app:lineWidth="4pt" />

    <LinearLayout
        android:layout_width="0pt"
        android:layout_height="match_parent"
        android:layout_weight="3"

        android:orientation="horizontal"
        android:paddingTop="20pt">


        <LinearLayout
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0pt"
                android:layout_weight="1"
                android:gravity="center"
                android:text="￥100"
                android:textColor="@color/color_08D2B2"
                android:textSize="48pt" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0pt"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="100元及100元以下课程任意券"
                android:textColor="@color/color_646464"
                android:textSize="24pt" />

        </LinearLayout>

        <ImageView
            android:layout_width="36pt"
            android:layout_height="36pt"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="26pt"
            android:src="@drawable/diyongquan_icon_default_tijiaodingdan" />

    </LinearLayout>
</LinearLayout>
