<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.aitang.ui.zhibo.MyClassActivity">

    <include
        android:id="@+id/headerview"
        layout="@layout/include_headerview" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88pt"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_myclassAct_kechengku"
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="课程库"
            android:textColor="@color/color_909090"
            android:textSize="34pt" />

        <View
            android:layout_width="1pt"
            android:layout_height="50pt"
            android:layout_gravity="center_vertical"
            android:background="@color/color_E5E5E5" />

        <TextView
            android:id="@+id/tv_myclassAct_kechengrili"
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="课程日历"
            android:textColor="@color/color_909090"
            android:textSize="34pt" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_content"
        android:layout_width="match_parent"
        android:layout_height="0pt"
        android:layout_weight="1"></FrameLayout>
</LinearLayout>
