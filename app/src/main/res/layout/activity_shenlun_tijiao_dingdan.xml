<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_tijiaodingdan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical"
    tools:context="com.example.administrator.aitang.ui.mine.CashCouponActivity">


    <include
        android:id="@+id/headerview"
        layout="@layout/include_headerview" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--头部信息-->
            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/headerview"
                android:background="@color/color_08D2B2"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="56pt"
                android:paddingStart="24pt"
                android:paddingTop="56pt">

                <TextView
                    android:id="@+id/tv_datiAct_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="申论专项批改"
                    android:textColor="#FEFEFE"
                    android:textSize="36pt" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="31pt"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_clock"
                        android:layout_width="20pt"
                        android:layout_height="20pt"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/clockwhite_icon_tijiaodingdan" />

                    <TextView
                        android:id="@+id/tv_dati_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20pt"
                        android:layout_toRightOf="@+id/iv_clock"
                        android:text="2018.08.14"
                        android:textColor="#FFFFFF"
                        android:textSize="24pt" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_dati_xinxi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21pt"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="30pt" />
            </LinearLayout>


            <!--代金券-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140pt"
                android:background="@color/color_line">

                <TextView
                    android:id="@+id/course_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_16dp"
                    android:layout_marginTop="60pt"
                    android:text="选择代金券"
                    android:textSize="34pt"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150pt"
                android:layout_marginLeft="26pt"
                android:layout_marginRight="26pt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="现金抵用券"
                    android:textColor="@color/color_323232"
                    android:textSize="34pt" />


                <TextView
                    android:id="@+id/tv_xianjinquan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="45pt"
                    android:layout_toLeftOf="@+id/cb_xianjinquan"
                    android:text=""
                    android:textColor="@color/color_08D2B2"
                    android:textSize="48pt" />

                <CheckBox
                    android:id="@+id/cb_xianjinquan"
                    android:layout_width="36pt"
                    android:layout_height="36pt"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/selector_diyongquan_cb_bg"
                    android:button="@null"
                    android:checked="false" />
            </RelativeLayout>

            <View
                style="@style/line_style"
                android:layout_marginLeft="24pt"
                android:layout_marginRight="24pt" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150pt"
                android:layout_marginLeft="26pt"
                android:layout_marginRight="26pt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="需支付"
                    android:textColor="@color/color_323232"
                    android:textSize="34pt" />


                <TextView
                    android:id="@+id/tv_zhifu_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/color_FF9B19"
                    android:textSize="60pt" />

            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="20pt"
                android:background="@color/color_F6F6F6" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150pt"
                android:layout_marginLeft="26pt"
                android:layout_marginRight="26pt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="支付方式"
                    android:textColor="@color/color_323232"
                    android:textSize="34pt" />

                <TextView
                    android:id="@+id/tv_zhifu_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="在线支付"
                    android:textColor="@color/color_909090"
                    android:textSize="30pt" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_F6F6F6">

                <Button
                    android:id="@+id/btn_tijiao_dingdan"
                    android:layout_width="400pt"
                    android:layout_height="88pt"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="168pt"
                    android:layout_marginTop="100pt"
                    android:background="@color/color_08D2B2"
                    android:text="提交订单"
                    android:textColor="#FFFFFF"
                    android:textSize="36pt" />

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>
