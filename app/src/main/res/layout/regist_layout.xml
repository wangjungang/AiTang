<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <include
        android:id="@+id/headerview"
        layout="@layout/include_headerview" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_exame"
                android:layout_width="match_parent"
                android:layout_height="100pt"
                android:background="@color/color_08D2B2"
                android:gravity="center_vertical"
                android:paddingLeft="25pt"
                android:text="欢迎进入爱唐公考APP"
                android:textColor="@color/color_white"
                android:textSize="32pt" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="88pt"
                android:layout_marginTop="30pt"
                android:background="@null"
                android:hint="请输入昵称"
                android:paddingLeft="40pt"
                android:singleLine="true"
                android:textColor="@color/color_323232"
                android:textSize="34pt" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1pt"
                android:layout_marginLeft="30pt"
                android:layout_marginRight="30pt"
                android:background="@color/color_E5E5E5" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="88pt"
                android:layout_marginTop="30pt"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:paddingLeft="40pt"
                android:singleLine="true"
                android:textColor="@color/color_323232"
                android:textSize="34pt" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1pt"
                android:layout_marginLeft="30pt"
                android:layout_marginRight="30pt"
                android:background="@color/color_E5E5E5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_verify"
                        android:layout_width="match_parent"
                        android:layout_height="88pt"
                        android:layout_marginTop="30pt"
                        android:background="@null"
                        android:hint="请输入手机验证码"
                        android:paddingLeft="40pt"
                        android:singleLine="true"
                        android:textColor="@color/color_323232"
                        android:textSize="34pt" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:layout_marginLeft="30pt"
                        android:layout_marginRight="60pt"
                        android:background="@color/color_E5E5E5" />

                </LinearLayout>

                <Button
                    android:id="@+id/bt_code"
                    android:layout_width="200pt"
                    android:layout_height="88pt"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="32pt"
                    android:background="@color/color_08D2B2"
                    android:text="发送验证码"
                    android:textColor="@color/color_white"
                    android:textSize="32pt"

                    />
            </LinearLayout>

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="88pt"
                android:layout_marginTop="30pt"
                android:background="@null"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:paddingLeft="40pt"
                android:singleLine="true"
                android:textColor="@color/color_323232"
                android:textSize="34pt" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1pt"
                android:layout_marginLeft="30pt"
                android:layout_marginRight="30pt"
                android:background="@color/color_E5E5E5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20pt"
                android:paddingLeft="57pt"
                android:paddingRight="57pt"
                android:text="为了您的账号安全，请输入6位及以上密码，爱唐承诺不会泄露您的手机号码且不会收取任何费用"
                android:textColor="@color/color_909090"
                android:textSize="24pt" />

            <EditText
                android:id="@+id/et_requery_psd"
                android:layout_width="match_parent"
                android:layout_height="88pt"
                android:layout_marginTop="30pt"
                android:background="@null"
                android:hint="请确认密码"
                android:inputType="textPassword"
                android:paddingLeft="40pt"
                android:singleLine="true"
                android:textColor="@color/color_323232"
                android:textSize="34pt" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1pt"
                android:layout_marginLeft="30pt"
                android:layout_marginRight="30pt"
                android:background="@color/color_E5E5E5" />

            <Button
                android:id="@+id/bt_finish"
                android:layout_width="350pt"
                android:layout_height="88pt"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100pt"
                android:background="@color/color_08D2B2"
                android:text="完成"
                android:textColor="@color/color_white"
                android:textSize="36pt" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>