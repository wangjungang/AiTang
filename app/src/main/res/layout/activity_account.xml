<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:gravity="center_horizontal"
    android:orientation="vertical"

    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="350pt"
        android:background="@drawable/logo_image_denglushouyemian"

        />

    <Button
        android:id="@+id/bt_denglu"
        android:layout_width="612pt"
        android:layout_height="88pt"
        android:layout_gravity="center"
        android:layout_marginTop="300pt"
        android:background="@color/color_08D2B2"
        android:text="登录"
        android:textColor="@color/color_white"
        android:textSize="42pt" />

    <Button
        android:id="@+id/bt_zhuce"
        android:layout_width="612pt"
        android:layout_height="88pt"
        android:layout_gravity="center"
        android:layout_marginTop="60pt"
        android:background="@color/color_F6F6F6"
        android:text="注册"
        android:textColor="@color/color_08D2B2"
        android:textSize="42pt" />

</LinearLayout>