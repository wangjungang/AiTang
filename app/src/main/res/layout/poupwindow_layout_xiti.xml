<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300pt"
    android:layout_height="wrap_content"
    android:background="@color/color_DADADA"
    android:orientation="vertical"
    android:padding="0.5pt">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:padding="20pt">

        <TextView
            android:id="@+id/tv_shoucang"
            android:layout_width="match_parent"
            android:layout_height="60pt"
            android:layout_marginBottom="20pt"
            android:drawableLeft="@drawable/shoucangtimu_icon_gengduo"
            android:drawablePadding="20pt"
            android:gravity="center"
            android:text="收藏本题"
            android:textSize="32pt" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1pt"
            android:background="@color/color_DADADA" />

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="match_parent"
            android:layout_height="60pt"
            android:layout_marginTop="20pt"
            android:drawableLeft="@drawable/fenxiang_icon"
            android:drawablePadding="20pt"
            android:gravity="center"
            android:text="分享本题"
            android:textSize="32pt" />
    </LinearLayout>

</LinearLayout>