<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160pt"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingEnd="26pt"
    android:paddingStart="60pt">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="12pt"
            android:layout_height="12pt"
            android:layout_marginTop="49pt"
            android:src="@drawable/kechengbiao_icon_kechengxiangqing" />

        <TextView
            android:id="@+id/tv_inflatelsvitem_kcb_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10pt"
            android:layout_marginTop="32pt"
            tools:text="授课时间("
            android:textColor="@color/color_323232"
            android:textSize="34pt" />

        <TextView
            android:id="@+id/tv_inflatelsvitem_kcb_keshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32pt"
            tools:text="388"
            android:textColor="@color/color_FF9B19"
            android:textSize="34pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32pt"
            android:text="分钟)"
            android:textColor="@color/color_646464"
            android:textSize="34pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_inflatelsvitem_kcb_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22pt"
            android:layout_marginTop="18pt"
            tools:text="老师名称"
            android:textColor="@color/color_646464"
            android:textSize="32pt" />

        <TextView
            android:id="@+id/tv_inflatelsvitem_kcb_timu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18pt"
            android:text=" - 授课题目"
            android:textColor="@color/color_646464"
            android:textSize="26pt" />
    </LinearLayout>
</LinearLayout>
