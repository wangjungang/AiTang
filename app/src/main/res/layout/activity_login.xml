<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:id="@+id/ll_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200pt"
        android:background="@drawable/logo_image_denglushouyemian" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="87pt"
        android:layout_marginRight="87pt"
        android:layout_marginTop="180pt"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="33pt"
            android:layout_height="36pt"
            android:src="@drawable/telephone_icon_dengluye" />

        <EditText
            android:id="@+id/et_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40pt"
            android:background="@null"
            android:hint="请输入手机号"
            android:singleLine="true"
            android:textSize="34pt" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="87pt"
        android:layout_marginRight="87pt"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="33pt"
            android:layout_height="36pt"
            android:src="@drawable/mima_icon_dengluye" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40pt"
            android:background="@null"
            android:hint="请输入密码"
            android:singleLine="true"
            android:password="true"
            android:textSize="34pt" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_forget_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20pt"
        android:gravity="right"
        android:paddingRight="69pt"
        android:text="忘记密码"
        android:textColor="@color/color_FF9B19"
        android:textSize="28pt" />


    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="88pt"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="69pt"
        android:layout_marginRight="69pt"
        android:layout_marginTop="60pt"
        android:background="@color/color_08D2B2"
        android:text="登录"
        android:textColor="@color/color_white"
        android:textSize="36pt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="69pt"
        android:layout_marginTop="50pt"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/weixin_icon_dengluye" />

        <ImageView
            android:id="@+id/iv_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20pt"
            android:src="@drawable/qq_icon_dengluye" />
    </LinearLayout>
</LinearLayout>
